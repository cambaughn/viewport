  
  <div id="photos">
    <% @photos.each do |photo| %>
      <div class="box">
        <%= link_to image_tag(photo.image.url), photo, class: "img-responsive wide_img" %>
        <h4><%= photo.caption %></h4>
        <p>Posted by <%= photo.user.name %></p>
        <%= link_to 'Show', photo %>

        <% if photo.user == current_user %>
          <%= link_to 'Edit', edit_photo_path(photo) %></td>
          <%= link_to 'Delete', photo, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      </div>
    <% end %>
  </div>